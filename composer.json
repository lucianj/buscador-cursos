{
    "name": "lucian/buscador-cursos",
    "description": "Projeto buscador de cursos na plataforma da Alura.",
    "type": "library",
    "authors": [
        {
            "name": "Lucian",
            "email": "lucianjosegoncales@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.10",
        "symfony/dom-crawler": "^7.3",
        "symfony/css-selector": "^7.3"
    },
    "autoload":{
        "files":
            ["./functions.php"],
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^4.0",
        "phan/phan": "^5.5"
    },
    "scripts": {
        "test": "phpunit tests\\TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser"
    }
}
